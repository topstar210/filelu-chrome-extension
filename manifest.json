{
  "manifest_version": 3,
  "name": "Files Uploader",
  "version": "1.0",
  "description": "The FileLu Uploader extension allows you to upload files, take screenshots, and record screen to FileLu directly from your browser.",
  "permissions": [
    "activeTab",
    "tabCapture",
    "desktopCapture",
    "notifications", 
    "storage",
    "sidePanel"
  ],
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
